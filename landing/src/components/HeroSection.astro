---
import IconBinocularsFilled from "~icons/tabler/binoculars-filled";
---

<section
  class="w-full min-h-screen flex items-center justify-center backdrop-blur-sm bg-black bg-opacity-40"
  aria-labelledby="hero-heading"
>
  <div class="container mx-auto px-6 md:px-8">
    <div class="flex flex-col md:flex-row items-center justify-between">
      <div
        class="flex-1 flex flex-col items-start space-y-8 text-left md:mb-0 mb-12"
      >
        <h1
          class="text-5xl sm:text-6xl md:text-7xl tracking-wider font-bold text-white"
          style={{
            textShadow:
              "3px 3px hsla(180, 100%, 50%, 0.8), -3px -3px hsl(300, 100%, 50%, 0.8)",
          }}
        >
          folo
        </h1>
        <p
          class="text-xl md:text-2xl font-bold text-gray-200 max-w-lg relative"
        >
          <span>Monitoring <IconBinocularsFilled class="inline text-blue-500" /> all your</span>
          <span
            class="mx-1 before:block before:absolute before:-inset-1 before:-skew-y-1 before:bg-purple-500/75 before:-z-10 relative inline-block"
          >
            social media
          </span>
          <span
            >accounts made <span class="underline underline-offset-4 decoration-wavy decoration-from-font decoration-yellow-500 text-white">super</span
            > easy</span
          >
        </p>
        <a
          href="https://play.google.com/store/apps/details?id=me.pavi2410.folo"
          aria-label="Download from Play Store"
          class="hover:opacity-90 transition-opacity"
        >
          <img
            src="/google-play-badge.png"
            alt="Get it on Google Play"
            class="h-14"
          />
        </a>
      </div>
      <div class="flex-1 flex justify-center perspective">
        <div class="phone-container">
          <div class="phone-frame">
            <div class="phone-screen">
              <img
                src="/folo_widgets.jpg"
                alt="Folo App Screenshot"
                class="screen-content"
              />
              <div class="screen-glare"></div>
            </div>
            <div class="phone-notch">
              <div class="phone-speaker"></div>
              <div class="phone-camera"></div>
            </div>
            <div class="phone-button"></div>
          </div>
          <div class="phone-reflection"></div>
        </div>
      </div>
    </div>
  </div>
</section>

<style>
  .perspective {
    perspective: 1200px;
  }
  .phone-container {
    position: relative;
    width: 320px;
    height: 660px;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
    transform: rotateY(-12deg) rotateX(6deg) scale(1.05);
    transition: transform 0.3s cubic-bezier(0.4, 2, 0.6, 1);
    filter: drop-shadow(0 12px 32px rgba(0, 0, 0, 0.45));
  }
  .phone-container:hover {
    transform: rotateY(-6deg) rotateX(2deg) scale(1.08);
    filter: drop-shadow(0 24px 48px rgba(0, 0, 0, 0.55));
  }
  .phone-frame {
    position: relative;
    width: 320px;
    height: 660px;
    background: linear-gradient(120deg, #23272f 60%, #444 100%);
    border-radius: 38px;
    box-shadow:
      0 8px 32px 0 rgba(0, 0, 0, 0.45),
      0 1.5px 0 0 #fff2 inset;
    border: 2.5px solid #222;
    display: flex;
    flex-direction: column;
    align-items: center;
    z-index: 2;
    overflow: visible;
  }
  .phone-screen {
    position: absolute;
    top: 18px;
    left: 10px;
    width: 300px;
    height: 624px;
    background: #111;
    border-radius: 30px;
    overflow: hidden;
    box-shadow:
      0 0 0 2px #222 inset,
      0 0 24px 0 #000a inset;
    z-index: 2;
  }
  .screen-content {
    width: 100%;
    height: 100%;
    object-fit: cover;
    border-radius: 30px;
    display: block;
    box-shadow: 0 0 0 1.5px #222 inset;
    z-index: 1;
    position: relative;
  }
  .screen-glare {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    pointer-events: none;
    background: linear-gradient(
      120deg,
      rgba(255, 255, 255, 0.13) 0%,
      rgba(255, 255, 255, 0.04) 60%,
      transparent 100%
    );
    mix-blend-mode: lighten;
    border-radius: 30px;
    z-index: 2;
  }
  .phone-notch {
    position: absolute;
    top: 8px;
    left: 50%;
    transform: translateX(-50%);
    width: 80px;
    height: 18px;
    background: #18181b;
    border-radius: 12px 12px 16px 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    z-index: 3;
    box-shadow: 0 1px 2px 0 #0008;
  }
  .phone-speaker {
    width: 36px;
    height: 5px;
    background: #333;
    border-radius: 3px;
    margin-right: 8px;
    margin-left: 8px;
    box-shadow: 0 0.5px 1px #fff2 inset;
  }
  .phone-camera {
    width: 10px;
    height: 10px;
    background: radial-gradient(circle at 60% 40%, #3af 60%, #222 100%);
    border-radius: 50%;
    margin-left: 8px;
    box-shadow: 0 0 2px #fff8 inset;
  }
  .phone-button {
    position: absolute;
    bottom: 16px;
    left: 50%;
    transform: translateX(-50%);
    width: 44px;
    height: 6px;
    background: #222;
    border-radius: 3px;
    box-shadow: 0 0.5px 1px #fff2 inset;
    z-index: 3;
  }
  .phone-reflection {
    position: absolute;
    top: 100%;
    left: 0;
    width: 100%;
    height: 80px;
    background: linear-gradient(
      180deg,
      rgba(255, 255, 255, 0.18) 0%,
      rgba(255, 255, 255, 0.04) 60%,
      transparent 100%
    );
    border-radius: 0 0 38px 38px;
    filter: blur(2.5px);
    opacity: 0.7;
    z-index: 1;
    pointer-events: none;
    transform: scaleY(-1) translateY(-8px);
    box-shadow: 0 8px 32px 0 rgba(0, 0, 0, 0.18);
  }
  @media (max-width: 768px) {
    .phone-container {
      width: 220px;
      height: 440px;
    }
    .phone-frame {
      width: 220px;
      height: 440px;
      border-radius: 24px;
    }
    .phone-screen {
      width: 204px;
      height: 416px;
      border-radius: 18px;
      top: 12px;
      left: 8px;
    }
    .phone-notch {
      width: 54px;
      height: 12px;
      border-radius: 7px 7px 10px 10px;
    }
    .phone-button {
      width: 28px;
      height: 4px;
      border-radius: 2px;
      bottom: 10px;
    }
    .phone-reflection {
      height: 48px;
      border-radius: 0 0 24px 24px;
    }
  }
</style>
