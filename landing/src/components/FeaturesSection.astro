---
const features = [
  {
    title: "Track Multiple Accounts",
    description:
      "Connect and monitor all your social media accounts in one place, from Instagram to YouTube.",
    image: "https://ext.same-assets.com/1737999868/1771255107.svg",
  },
  {
    title: "Live Followers Count",
    description:
      "Watch your follower counts update in real-time and get notifications for significant changes.",
    image: "https://ext.same-assets.com/1737999868/548389142.svg",
  },
  {
    title: "Growth Analytics",
    description:
      "See detailed statistics about your account growth with percentage changes and trends.",
    image: "https://ext.same-assets.com/1737999868/2563901416.svg",
  }
];
---

<section
    class="w-full py-16 md:py-24 bg-black bg-opacity-70 backdrop-blur-sm"
    aria-labelledby="features-heading"
>
    <div class="container mx-auto px-6 md:px-8">
        <div
            class="flex flex-col items-center justify-center space-y-4 text-center mb-12"
        >
            <h2
                id="features-heading"
                class="text-2xl font-semibold tracking-tight sm:text-3xl md:text-4xl max-w-3xl mx-auto text-white"
            >
                Everything you need to track your social media growth
            </h2>
        </div>
        <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
            {
                features.map((f, i) => (
                    <article
                        key={f.title}
                        class="bg-gradient-to-b p-6 rounded-xl shadow-xl text-white flex flex-col h-full border border-gray-700"
                        style={{
                            background:
                                i === 0
                                    ? "linear-gradient(to bottom, #3b82f6, #1d4ed8)"
                                    : i === 1
                                      ? "linear-gradient(to bottom, #ec4899, #be185d)"
                                      : "linear-gradient(to bottom, #f59e0b, #b45309)",
                        }}
                    >
                        <div class="flex-1">
                            <h3 class="text-lg font-semibold mb-2 text-white">
                                {f.title}
                            </h3>
                            <p class="text-white text-sm mb-6 opacity-90">
                                {f.description}
                            </p>
                        </div>
                    </article>
                ))
            }
        </div>
    </div>
</section>
